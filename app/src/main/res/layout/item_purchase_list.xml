<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llUserCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/ll_bg_corner"
        android:weightSum="1"
        android:layout_marginTop="@dimen/_12sdp"
        tools:ignore="UseCompoundDrawables">

        <LinearLayout
            android:id="@+id/llIn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_weight=".7"
            android:layout_marginVertical="@dimen/_2sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvUserName"
                style="@style/QuaternaryFullBlackTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/gothic_bold"
                android:text="Dharmendra Singh"
                tools:ignore="InefficientWeight" />

            <TextView
                android:id="@+id/tvEmail"
                style="@style/QuinaryLightSubTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/inter_regular"
                android:layout_marginTop="@dimen/_3sdp"
                android:text="dahramendrasingh001@gmail.com"
                tools:ignore="InefficientWeight" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:gravity="end"
            android:paddingTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivDropdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:paddingVertical="@dimen/_6sdp"
                android:paddingEnd="@dimen/_4sdp"
                android:contentDescription="@string/image"
                android:rotation="90"
                android:src="@drawable/ic_arrow_right" />

            <TextView
                android:id="@+id/tvMobileNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/QuinaryLightSubTextStyle"
                android:fontFamily="@font/inter_regular"
                android:text="98765 43210"/>
        </LinearLayout>


    </LinearLayout>

        <LinearLayout
            android:id="@+id/llPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_linecolor_bg"
            android:paddingVertical="@dimen/_10sdp"
            android:paddingHorizontal="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_minus2sdp"
            android:visibility="gone"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvSubTotal_Id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:text="@string/pakage_name"
                    android:theme="@style/QuinaryLightSubTextStyle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/inter_semibold"
                    android:text="@string/pakage_name"
                    android:theme="@style/QuinaryLightTextStyle" />

            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginVertical="@dimen/_8sdp"
                android:background="@color/HorizontallineColor" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:text="@string/price"
                    android:theme="@style/QuinaryLightSubTextStyle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/inter_semibold"
                    android:text="₹2500.0"
                    android:theme="@style/QuinaryLightTextStyle"
                    tools:ignore="RelativeOverlap" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginVertical="@dimen/_8sdp"
                android:background="@color/HorizontallineColor" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:text="@string/commision_in_persantage"
                    android:theme="@style/QuinaryLightSubTextStyle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/inter_semibold"
                    android:text="@string/_18"
                    android:theme="@style/QuinaryLightTextStyle" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginVertical="@dimen/_8sdp"
                android:background="@color/HorizontallineColor" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:text="@string/amount"
                    android:theme="@style/QuinaryLightSubTextStyle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/inter_semibold"
                    android:text="₹450.0"
                    android:theme="@style/QuinaryLightTextStyle" />
            </RelativeLayout>

        </LinearLayout>

</LinearLayout>