<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:rsb="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".main.fragment.PriceFragment">

    <TextView
        android:id="@+id/tvPriceRange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/inter_bold"
        android:gravity="center"
        android:text="@string/price_range"
        android:theme="@style/QuaternaryLightSubTextStyle" />


    <com.yahoo.mobile.client.android.util.rangeseekbar.RangeSeekBar
        android:id="@+id/rangeSeekbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPriceRange"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:indeterminate="false"
        android:max="5000"
        android:progress="500"/>


    <TextView
        android:id="@+id/tvStartReat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rangeSeekbar"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:fontFamily="@font/inter_regular"
        android:text="@string/_500"
        android:theme="@style/QuinaryTextStyle" />


    <TextView
        android:visibility="gone"
        android:id="@+id/tvPricePopup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rangeSeekbar"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@drawable/ic_twofivezerozero"
        android:fontFamily="@font/inter_regular"
        android:gravity="center"
        android:text="@string/_2500"
        android:theme="@style/QuinaryWhiteTextStyle" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tvPricePopuptwo"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rangeSeekbar"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:fontFamily="@font/inter_regular"
        android:background="@drawable/ic_twofivezerozero"
        android:text="@string/_2500"
        android:gravity="center"
        android:theme="@style/QuinaryWhiteTextStyle" />

    <TextView
        android:id="@+id/tvStartReatTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rangeSeekbar"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:fontFamily="@font/inter_regular"
        android:text="@string/_5000"
        android:theme="@style/QuinaryTextStyle" />






</RelativeLayout>