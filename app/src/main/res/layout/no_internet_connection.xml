<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/llParentNoInternet"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivDanger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_minus22sdp"
            android:layout_toRightOf="@+id/ivWifi"
            android:src="@drawable/ic_iv_worning" />

        <ImageView
            android:id="@+id/ivWifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_28sdp"
            android:src="@drawable/ic_not_wifi_conect" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tvThankYou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:fontFamily="@font/inter_semibold"
        android:gravity="center"
        android:text="@string/no_internet_connection"
        android:theme="@style/PrimaryHeadingTextStyle" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_28sdp"
        android:fontFamily="@font/inter_regular"
        android:gravity="center"
        android:text="@string/could_not_connect_to_internet_please_check_your_wifi_or_mobile_data_to_connect"
        android:theme="@style/QuinaryBlackTextStyle" />

    <TextView
        android:id="@+id/tvRetry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_28sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:padding="@dimen/_10sdp"
        android:fontFamily="@font/inter_semibold"
        android:gravity="center"
        android:text="@string/try_again"
        android:theme="@style/TernaryThemeHeadingTextStyle" />


</LinearLayout>