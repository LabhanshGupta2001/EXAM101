<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    style="@style/BottomSheetBackStyle"
    android:layout_height="match_parent">


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcvLine"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_5sdp"
            android:layout_marginVertical="@dimen/_8sdp"
            app:cardBackgroundColor="@color/lightgrey"
            app:cardCornerRadius="@dimen/_2sdp"
            android:layout_gravity="center_horizontal"
            app:cardElevation="1dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_12sdp"
        android:background="@drawable/bottom_curve_background"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sort_by"
           android:gravity="center"
            style="@style/SecondaryHeadingTextStyle"
            android:layout_marginVertical="@dimen/_12sdp"
            android:fontFamily="@font/gothic_bold"/>

        <View
            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/grey"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcvAtoZ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/background"
            app:cardCornerRadius="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:strokeColor="@color/StrokeColorLightBlue"
            app:strokeWidth="@dimen/_1sdp"
            app:cardElevation="0dp">
            <TextView
                android:id="@+id/tvAtoZ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sort_a_to_z"
                android:padding="@dimen/_12sdp"
                android:fontFamily="@font/inter_medium"
                style="@style/QuaternaryTextStyle"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcvZtoA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/background"
            app:cardCornerRadius="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_8sdp"
            app:strokeColor="@color/StrokeColorLightBlue"
            app:strokeWidth="@dimen/_1sdp"
            app:cardElevation="0dp">
            <TextView
                android:id="@+id/tvZtoA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sort_z_to_a"
                android:padding="@dimen/_12sdp"
                android:fontFamily="@font/inter_medium"
                style="@style/QuaternaryTextStyle"/>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</LinearLayout>