<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcvLine"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_5sdp"
        android:layout_marginVertical="@dimen/_12sdp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/lightgrey"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@drawable/bottom_curve_background"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_14sdp"
            android:fontFamily="@font/gothic_bold"
            android:gravity="center_horizontal"
            android:text="@string/referral_code"
            android:theme="@style/SecondaryFullBlackHeadingTextStyle" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/lineColor" />

        <EditText
            android:id="@+id/etReferralCode_Id"
            android:layout_width="match_parent"
            android:background="@drawable/click_change_bg"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginVertical="@dimen/_24sdp"
            android:singleLine="true"
            android:fontFamily="@font/inter_semibold"
            android:paddingVertical="@dimen/_12sdp"
            android:paddingHorizontal="@dimen/_6sdp"
            android:hint="@string/yog4500erz"
            android:theme="@style/QuaternaryTextStyle" />
        <TextView
            android:id="@+id/tvApply"
            style="@style/TernaryWhiteTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@drawable/theme_stroke_background"
            android:backgroundTint="@color/theme"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center"
            android:padding="@dimen/_11sdp"
            android:text="@string/apply" />

    </LinearLayout>

</LinearLayout>