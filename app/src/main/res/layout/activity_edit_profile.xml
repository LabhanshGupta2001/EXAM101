<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_12sdp"
    tools:context=".main.activity.EditProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/llToolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@color/white"
                android:elevation="@dimen/_3sdp"
                android:gravity="center_vertical"
                android:padding="@dimen/_4sdp">

                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="@dimen/_34sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:contentDescription="@string/back_arrow"
                    android:padding="@dimen/_8sdp"
                    android:src="@drawable/ic_backarrow" />


                <TextView
                    style="@style/TernaryTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:fontFamily="@font/gothic_bold"
                    android:text="@string/edit_profile" />
            </LinearLayout>
            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_12sdp"
                android:background="@color/lineColor"
                android:orientation="vertical" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_14sdp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mcvProfile"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_1sdp"
                        app:cardCornerRadius="@dimen/_40sdp">

                        <ImageView
                            android:id="@+id/ivProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_userprofile" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mcvProfileSelector"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_below="@id/mcvProfile"
                        android:layout_marginStart="@dimen/_minus24sdp"
                        android:layout_marginTop="@dimen/_minus22sdp"
                        android:layout_toRightOf="@id/mcvProfile"
                        app:cardCornerRadius="@dimen/_10sdp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/_4sdp"
                            android:src="@drawable/ic_camera" />
                    </com.google.android.material.card.MaterialCardView>
                </RelativeLayout>
                <EditText
                    android:id="@+id/etUserName"
                    style="@style/QuaternaryTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:layout_marginVertical="@dimen/_14sdp"
                    android:background="@drawable/input_custom"
                    android:fontFamily="@font/inter_medium"
                    android:hint="@string/enter_user_name"
                    android:inputType="text"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:paddingVertical="@dimen/_12sdp" />
                <EditText
                    android:id="@+id/etUserEmail"
                    style="@style/QuaternaryTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_14sdp"
                    android:background="@drawable/input_custom"
                    android:fontFamily="@font/inter_medium"
                    android:hint="@string/enter_your_mail_id"
                    android:inputType="textEmailAddress"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:paddingVertical="@dimen/_12sdp" />
                <LinearLayout
                    android:id="@+id/llMobileNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_14sdp"
                    android:background="@drawable/grey_stroke_background"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/SpinnerCountry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:background="@drawable/spinner"
                        android:spinnerMode="dropdown"
                        android:theme="@style/QuaternarySpinnerLightTextStyle"
                        android:visibility="visible"
                        tools:listitem="@layout/country_spinner" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_1sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_downspinner" />

                    <LinearLayout
                        android:id="@+id/llspinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="@dimen/_19sdp"
                            android:layout_height="@dimen/_19sdp"
                            android:layout_marginVertical="@dimen/_5sdp"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginEnd="@dimen/_2sdp"
                            app:cardCornerRadius="@dimen/_30sdp">

                            <ImageView
                                android:id="@+id/iv_flag_india_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_india" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/tv_contry_code_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/inter_medium"
                            android:text="+91"
                            android:theme="@style/SenaryTextStyle" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_downarrow" />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="@dimen/_8sdp"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginEnd="@dimen/_7sdp"
                        android:background="@color/HorizontallineColor" />

                    <EditText
                        android:id="@+id/etMobileNo"
                        style="@style/QuaternaryTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_2sdp"
                        android:background="@color/white"
                        android:fontFamily="@font/inter_medium"
                        android:hint="Enter Your Mobile Number"
                        android:inputType="number"
                        android:maxLength="15"
                        android:maxLines="1"
                        android:paddingVertical="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_30sdp"
                        android:singleLine="true" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llCountry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_14sdp"
                    android:background="@drawable/grey_stroke_background"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingVertical="@dimen/_9sdp">

                    <Spinner
                        android:id="@+id/Spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:theme="@style/QuaternarySpinnerLightTextStyle" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/allStates"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_14sdp"
                    android:background="@drawable/grey_stroke_background"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingVertical="@dimen/_11sdp">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:entries="@array/States"
                        android:theme="@style/QuaternarySpinnerLightTextStyle" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/sllCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:background="@drawable/grey_stroke_background"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingVertical="@dimen/_11sdp">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:entries="@array/City"
                        android:theme="@style/QuaternarySpinnerLightTextStyle" />
                </LinearLayout>
            </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/llSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:background="@drawable/theme_backround"
        android:gravity="center"
        android:padding="@dimen/_10sdp">

        <TextView
            style="@style/TernaryWhiteTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:text="@string/save" />
    </LinearLayout>

</RelativeLayout>





