<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_4sdp"
    android:id="@+id/llItem"
    android:background="@drawable/grey_stroke_half_curve"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/_2sdp"
    android:paddingHorizontal="@dimen/_8sdp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvCountryFlagStart"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="center"
        android:visibility="visible"
        app:cardPreventCornerOverlap="true"
        android:layout_marginStart="1dp"
        app:cardCornerRadius="@dimen/_15sdp">

        <ImageView
            android:id="@+id/ivStartCountryFlags"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/etCodeId"
        style="@style/QuaternarySpinnerLightTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_40sdp"
        android:layout_weight="0.2"
        android:gravity="center"
        android:hint="+91"
        android:singleLine="true"
        android:textColorHint="@color/sub_text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_nameId"
        style="@style/QuaternarySpinnerLightTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:layout_weight="0.8"
        android:gravity="center_vertical"
        android:hint="Country"
        android:singleLine="true"
        android:textColorHint="@color/sub_text"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvCountryFlag"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/_15sdp">

        <ImageView
            android:id="@+id/ivCountryFlags"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:scaleType="centerCrop"
            android:layout_gravity="center" />
    </androidx.cardview.widget.CardView>

</LinearLayout>