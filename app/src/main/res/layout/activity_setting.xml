<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".main.activity.SettingActivity">

    <LinearLayout
        android:id="@+id/llToolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/white"
        android:elevation="@dimen/_3sdp"
        android:gravity="center_vertical"
        android:padding="@dimen/_4sdp">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/_34sdp"
            android:layout_height="@dimen/_28sdp"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_backarrow"
            android:contentDescription="@string/image"/>


        <TextView
            style="@style/TernaryTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_4sdp"
            android:fontFamily="@font/gothic_bold"
            android:text="@string/setting" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_12sdp"
        android:background="@color/lineColor"
        android:id="@+id/viewOne"/>

        <LinearLayout
            android:id="@+id/llNotifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@color/background"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                app:cardBackgroundColor="@color/light_gray"
                app:cardCornerRadius="@dimen/_4sdp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_balle"
                    android:contentDescription="@string/image"/>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvNotification"
                style="@style/TernaryTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_weight="1"
                android:fontFamily="@font/inter_medium"
                android:text="@string/notifications" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/btnSwitch"
                android:layout_width="wrap_content"
                app:switchMinWidth="@dimen/_40sdp"
                android:padding="0dp"
                android:checked="true"
                android:layout_height="wrap_content"
                app:thumbTint="@color/white"
                app:track="@drawable/custom_track" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginVertical="@dimen/_12sdp"
            android:background="@color/HorizontallineColor" />

        <LinearLayout
            android:id="@+id/llLoginHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:weightSum="1">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_gravity="center_vertical"
                app:cardBackgroundColor="@color/light_gray"
                app:cardCornerRadius="@dimen/_4sdp"
                app:cardElevation="0dp">
                <ImageView
                    android:layout_marginBottom="@dimen/_minus3sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_vector_log"
                    android:contentDescription="@string/image"/>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvLogonHistory"
                style="@style/TernaryTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_weight="1"
                android:fontFamily="@font/inter_medium"
                android:text="@string/login_history" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_3sdp"
                android:paddingVertical="@dimen/_2sdp"
                android:src="@drawable/ic_arrow_right"
                android:contentDescription="@string/image"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:background="@color/HorizontallineColor" />

        <LinearLayout
            android:id="@+id/llChangePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:weightSum="1">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                app:cardBackgroundColor="@color/light_gray"
                app:cardCornerRadius="@dimen/_4sdp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_lock"
                    android:contentDescription="@string/image"/>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvChangePassword"
                style="@style/TernaryTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_weight="1"
                android:fontFamily="@font/inter_medium"
                android:text="@string/change_password" />

            <ImageView
                android:id="@+id/ivOderHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_3sdp"
                android:paddingVertical="@dimen/_2sdp"
                android:src="@drawable/ic_arrow_right"
                android:contentDescription="@string/image"/>
        </LinearLayout>

</LinearLayout>