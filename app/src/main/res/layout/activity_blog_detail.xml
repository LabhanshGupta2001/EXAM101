<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Basics.activity.BlogDetailActivity">

    <LinearLayout
        android:id="@+id/llToolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/white"
        android:elevation="@dimen/_3sdp"
        android:gravity="center_vertical"
        android:padding="@dimen/_4sdp">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/_34sdp"
            android:layout_height="@dimen/_28sdp"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_backarrow" />


        <TextView
            style="@style/TernaryTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_4sdp"
            android:fontFamily="@font/gothic_bold"
            android:text="@string/blog_detail" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/svMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/rlImg"
                android:layout_width="match_parent"
                android:elevation="@dimen/_6sdp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imBlogDetail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_147sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_image" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cvDArticle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/imBlogDetail"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    app:cardBackgroundColor="@color/theme"
                    app:cardCornerRadius="@dimen/_20sdp">

                    <TextView
                        android:id="@+id/tvBlogHeading"
                        style="@style/SenaryWhiteTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_semibold"
                        android:paddingHorizontal="@dimen/_7sdp"
                        android:paddingVertical="@dimen/_3sdp"
                        android:text="@string/development_article" />

                </com.google.android.material.card.MaterialCardView>


                <TextView
                    android:id="@+id/tvDate"
                    style="@style/SenaryWhiteTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/imBlogDetail"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_11sdp"
                    android:fontFamily="@font/inter_medium"
                    android:text="02 June, 2021" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_12sdp"
                android:background="@color/lineColor"
                android:id="@+id/viewOne"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_12sdp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="1">


                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/mcvAuthorImg"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            app:cardCornerRadius="@dimen/_10sdp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/ivAuthorProfile"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/user_profile" />

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/tvAuthorName"
                            style="@style/QuaternaryDarkTextStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_weight="1"
                            android:fontFamily="@font/inter_medium"
                            android:text="@string/author_name" />

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/mcvShare"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            app:cardBackgroundColor="@color/lineColor"
                            app:cardCornerRadius="@dimen/_10sdp"
                            app:cardElevation="0dp"
                            app:strokeColor="@color/primaryStrokeColor"
                            app:strokeWidth=".5dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_share" />

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                <TextView
                    android:id="@+id/tvMainHeading"
                    style="@style/TernaryDarkTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_12sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/gothic_bold"
                    android:maxLines="2"
                    android:paddingEnd="@dimen/_10sdp"
                    android:text="5 Ways Google Cloud Platform Unlocks
Deep Data Insights" />

                <TextView
                    android:id="@+id/tvSubHeading"
                    style="@style/QuinarySubHeadingTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter_regular"
                    android:text="Are you looking for a career thatâ€™s interesting, challenging,
and very much in-demand?" />

                <TextView
                    android:id="@+id/tvBlogLine"
                    style="@style/QuinarySubHeadingTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter_regular"
                    android:text="A pellentesque tincidunt sit amet, consectetur adipiscing elit.
Et bibendum enim dignissim nibh egestas. Nunc ultrices cursus
sed pellentesque tincidunt libero. Id diam dolor id penatibus.
Tellus est semper amet eget pharetra curabitur." />


                <TextView
                    android:id="@+id/tvFirstPoint"
                    style="@style/TernaryDarkTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:fontFamily="@font/gothic_bold"
                    android:text="1. Ease of use" />

                <TextView
                    style="@style/QuinarySubHeadingTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:text="A pellentesque tincidunt sit amet, consectetur adipiscing elit.
Et bibendum enim dignissim nibh egestas. Nunc ultrices cursus
sed pellentesque tincidunt libero. Id diam dolor id penatibus.
Tellus est semper amet eget pharetra curabitur." />

                <TextView
                    android:id="@+id/tvSecondPoint"
                    style="@style/TernaryDarkTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:fontFamily="@font/gothic_bold"
                    android:text="2. Range of compute options" />

                <TextView
                    style="@style/QuinarySubHeadingTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:text="A pellentesque tincidunt sit amet, consectetur adipiscing elit.
Et bibendum enim dignissim nibh egestas. Nunc ultrices cursus
sed pellentesque tincidunt libero. Id diam dolor id penatibus.
Tellus est semper amet eget pharetra curabitur." />

                </LinearLayout>

            </LinearLayout>
    </ScrollView>
</LinearLayout>