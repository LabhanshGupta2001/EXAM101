<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcvLine"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_5sdp"
        android:layout_marginVertical="@dimen/_12sdp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/lightgrey"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="1dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@drawable/bottom_curve_background"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/apply_coupon"
            android:fontFamily="@font/gothic_bold"
            android:theme="@style/SecondaryFullBlackHeadingTextStyle"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/_14sdp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:background="@color/lineColor"
            android:layout_marginTop="@dimen/_10sdp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@color/white"
            android:orientation="horizontal">


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginVertical="@dimen/_12sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:strokeWidth="@dimen/_1sdp"
                android:paddingVertical="@dimen/_12sdp"
                app:strokeColor="@color/HorizontallineColor">




                    <TextView
                        android:id="@+id/tvApplyCoupon_Id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingVertical="@dimen/_12sdp"
                        android:layout_marginHorizontal="@dimen/_8sdp"
                        android:layout_toRightOf="@id/cardProfile"
                        android:fontFamily="@font/inter_semibold"
                        android:text="@string/savepackage50"
                        android:theme="@style/QuaternaryTextStyle" />


            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>


        <TextView
            style="@style/TernaryWhiteTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@drawable/theme_stroke_background"
            android:backgroundTint="@color/theme"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center"
            android:padding="@dimen/_11sdp"
            android:text="@string/apply" />



    </LinearLayout>

    </LinearLayout>