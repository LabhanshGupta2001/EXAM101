<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_iv_data_not_found"
        android:layout_marginBottom="@dimen/_32sdp"
        android:id="@+id/ivThankYou"/>
    <TextView
        android:id="@+id/tvThankYou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibold"
        android:layout_marginBottom="@dimen/_8sdp"
        android:gravity="center"
        android:text="@string/no_data_found"
        android:theme="@style/PrimaryFullBlackTextStyle" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_28sdp"
        android:gravity="center"
        android:fontFamily="@font/inter_medium"
        android:text="@string/no_packages_found_in_this_page"
        android:theme="@style/TernaryDarkTextStyle" />


    <TextView
        android:id="@+id/tvBtnBackToHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="@dimen/_10sdp"
        android:text="@string/try_again"
        android:padding="@dimen/_6sdp"
        android:fontFamily="@font/inter_medium"
        android:theme="@style/TernaryThemeTextStyle" />


</LinearLayout>