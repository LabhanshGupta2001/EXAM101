<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:strokeColor="@color/HorizontallineColor"
        app:strokeWidth="@dimen/_1sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llTopBarId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_6sdp"
                android:layout_marginHorizontal="@dimen/_6sdp"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tvPowerPoint_Id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:fontFamily="@font/inter_medium"
                        android:text="@string/microsoft_power_point"
                        android:theme="@style/QuinaryThemeTextStyle" />

                    <TextView
                        android:id="@+id/tvFundamentalDesign_Id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginTop="@dimen/_4ssp"
                        android:fontFamily="@font/gothic_bold"
                        android:text="@string/best_way_learn_fundamentals_of_ndesign_thinking"
                        android:theme="@style/QuinaryBlackTextStyle3" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight=".2">


                    <TextView
                        android:id="@+id/tvRating"
                        style="@style/QunaryYellowTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.4"
                        android:layout_gravity="end"
                        android:drawablePadding="@dimen/_2sdp"
                        android:drawableLeft="@drawable/ic_yello_star"
                        android:fontFamily="@font/inter_medium"
                        />


                    <TextView
                        android:id="@+id/tvRupees"
                        style="@style/TernaryThemeTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:fontFamily="@font/inter_semibold"
                        android:text="â‚¹500" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginHorizontal="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:background="@color/HorizontallineColor" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8sdp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:baselineAligned="false">


                <LinearLayout
                    android:id="@+id/llRemove"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvRemove_Id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:drawablePadding="@dimen/_2sdp"
                        android:fontFamily="@font/inter_medium"
                        android:text="@string/remove"
                        android:theme="@style/QuinaryLightTextStyle"
                        app:drawableStartCompat="@drawable/ic_removesvg" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llAdToCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvWishList_Id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/_2sdp"
                        android:paddingEnd="@dimen/_6sdp"
                        android:fontFamily="@font/inter_regular"
                        android:text="@string/add_to_cart"
                        android:theme="@style/QuinaryTheemTextStyle"
                        app:drawableStartCompat="@drawable/ic_shopping_cart_trolly" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


</LinearLayout>